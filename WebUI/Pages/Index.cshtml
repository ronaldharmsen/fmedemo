@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h3>Upload text file</h3>
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FileUpload.TextFile" class="control-label"></label>
                    <input name="TextFile" type="file" class="form-control" style="height:auto" />
                    <span asp-validation-for="FileUpload.TextFile" class="text-danger"></span>
                </div>
                <input type="submit" value="Upload" class="btn btn-default" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}